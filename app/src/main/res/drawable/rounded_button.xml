<!-- res/drawable/rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="12dp"/>
    <solid android:color="@color/buttonColorPrimary"/>
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp"/>
    <stroke
        android:width="1dp"
        android:color="@color/buttonBorderColor"/>
    <shadowColor android:color="#B0B0B0"/>
</shape>
